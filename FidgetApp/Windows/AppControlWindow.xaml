<Window x:Class="FidgetApp.Windows.AppControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FidgetApp.Windows"
        mc:Ignorable="d"
        Title="AppControlWindow" SizeToContent="WidthAndHeight" ResizeMode="CanMinimize" Left="1400" Top="200"
        WindowStyle="None" Topmost="True">
    <Grid x:Name="AppMenu">
        <Grid.Resources>
            <Style TargetType="Button">
                <Setter Property="Padding" Value="5" />
            </Style>
            <Style TargetType="ToggleButton">
                <Setter Property="Padding" Value="5" />
            </Style>
        </Grid.Resources>
        
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <ToggleButton x:Name="MenuCollapse_ToggleButton" Grid.Row="0" Click="AppMenu_ToggleCollapse">▽</ToggleButton>

        <Grid x:Name="AppModes" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            
            <ToggleButton Grid.Row="0">⚽</ToggleButton>
            <ToggleButton Grid.Row="1">🎯</ToggleButton>
        </Grid>

        <Button Grid.Row="2" Click="Exit">X</Button>
    </Grid>
</Window>
