<Window x:Class="FidgetApp.Windows.AppControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FidgetApp.Windows"
        mc:Ignorable="d"
        Title="AppControlWindow" SizeToContent="WidthAndHeight" ResizeMode="CanMinimize" Left="1400" Top="200"
        WindowStyle="None" Topmost="True">
    <Grid x:Name="AppMenu">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <ToggleButton x:Name="MenuCollapse_ToggleButton" Grid.Row="0" Click="AppMenu_ToggleCollapse">▽</ToggleButton>

        <Button Grid.Row="1" Click="Exit">X</Button>
    </Grid>
</Window>
